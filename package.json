{
  "name": "dealls-test",
  "version": "1.0.0",
  "description": "Dealls Senior Backend Technical Test",
  "main": "index.ts",
  "scripts": {
    "start": "docker-compose --env-file ./db.env up",
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "npm run tsc:build -- -w",
    "watch-dev": "nodemon -d 1 -P 200 -L -w \"src/**/*.ts\" -x \"yarn tsc:build && yarn server\"",
    "tsc:build": "tsc -p tsconfig.json --outDir ./dist",
    "prod": "yarn setup && yarn server",
    "setup": "yarn db:migrate",
    "server": "node dist/index.js",
    "test:init": "NODE_ENV=test yarn db:init",
    "test:base": "NODE_ENV=test mocha --require source-map-support/register --exit --timeout 5000",
    "test": "yarn test:base 'dist/**/{test/*.js,*.spec.js,*test.js}'",
    "db:init": "sequelize db:drop &&sequelize db:create && yarn db:migrate && yarn db:seed",
    "db:reset": "sequelize db:migrate:undo:all",
    "db:rollback": "sequelize db:migrate:undo",
    "db:migrate": "sequelize db:migrate",
    "db:seed": "sequelize db:seed:all",
    "db:migration:create": "sequelize migration:generate --migrations-path src/database/migrations",
    "db:seeder:create": "sequelize seed:generate --seeders-path src/database/seeders"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-datetime": "^0.0.33",
    "@types/chai-string": "^1.4.1",
    "@types/dirty-chai": "^2.0.4",
    "@types/hapi-auth-bearer-token": "^6.1.8",
    "@types/hapi__glue": "^6.1.9",
    "@types/lodash": "^4.17.4",
    "@types/mocha": "^10.0.6",
    "@types/sinon-chai": "^3.2.12",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.2",
    "chai-datetime": "^1.8.0",
    "chai-string": "^1.5.0",
    "dirty-chai": "^2.0.1",
    "eslint": "9.x",
    "globals": "^15.4.0",
    "mocha": "^10.4.0",
    "mocha-multi-reporters": "^1.5.1",
    "sequelize-cli": "^6.5.2",
    "source-map-support": "^0.5.21",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.12.0"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@hapi/basic": "^7.0.2",
    "@hapi/boom": "^10.0.1",
    "@hapi/glue": "^9.0.1",
    "@hapi/hapi": "^21.3.9",
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "hapi-auth-bearer-token": "^8.0.0",
    "joi": "^17.13.1",
    "lodash": "^4.17.21",
    "nodemon": "^3.1.3",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.3",
    "sequelize-typescript": "^2.1.6",
    "sinon": "^18.0.0",
    "sinon-chai": "^3.7.0",
    "uuid": "^9.0.1"
  }
}
